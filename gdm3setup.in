		self.Box_Main = self.Builder.get_object("box_main")
		self.add(self.Box_Main)

		self.ComboBox_shell10 = self.Builder.get_object("ComboBox_shell10")
		self.ComboBox_icon = self.Builder.get_object("ComboBox_icon")
